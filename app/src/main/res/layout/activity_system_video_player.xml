<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_system_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ff000000"
    tools:context="com.atguigu.ljt.mobileplayer.activity.SystemVideoPlayerActivity">
    <com.atguigu.ljt.mobileplayer.view.VideoView
        android:id="@+id/videoview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <include layout="@layout/mediacontroller"/>
    <TextView
        android:id="@+id/tv_volume"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textSize="26sp"
        android:padding="5dp"
        android:background="#33000000"
        android:textColor="#ff3097fd"/>
    <include layout="@layout/loading" android:id="@+id/ll_loading"/>
    <include layout="@layout/buffer" android:id="@+id/ll_buffer"/>
</RelativeLayout>
